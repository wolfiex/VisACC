{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "D3 Froce directed Graph",
  "main": "main.js",
  "dependencies": {},
  "devDependencies": {
    "electron": "^1.4.0",
    "electron-builder": "^7.12.2",
    "electron-packager": "^8.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/wolfiex/VisACC.git"
  },
  "scripts": {
    "start": "electron main.js"
  },
  "author": "Daniel Ellis, daniel.ellis.research@gmail.com",
  "license": "ISC"
}


"scripts": {
    "dev": "electron . --enable-logging",
    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",
    "pack": "npm run clean && npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run clean:osx && electron-packager . \"VisACC\" --out=dist/osx --platform=darwin --arch=x64 --version=0.36.2 --icon=assets/osx/logo.icns --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "pack:win": "npm run clean:win && electron-packager . \"VisACC\" --out=dist/win --platform=win32 --arch=ia32 --version=0.36.2 --icon=assets/win/logo.ico --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "build": "npm run build:osx && npm run build:win",
    "build:osx": "npm run pack:osx && electron-builder \"dist/osx/VisACC-darwin-x64/VisACC.app\" --platform=osx --out=\"dist/osx\" --config=builder.json",
    "build:win": "npm run pack:win && electron-builder \"dist/win/VisACC-win32-ia32\" --platform=win --out=\"dist/win\" --config=builder.json"
  }
